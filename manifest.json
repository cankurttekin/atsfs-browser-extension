{
  "manifest_version": 2,
  "name": "ATSFS",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "https://www.linkedin.com/*",
    "http://localhost:443/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_security_policy": "script-src 'self' http://localhost:443; object-src 'self'"
}
